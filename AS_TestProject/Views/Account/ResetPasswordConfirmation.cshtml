@{
    ViewBag.Title = "Reset password confirmation";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}

<div id="login-page">
    <div class="container">
        <div class="form-login">
            <div class="login-wrap">
                <section id="loginForm" style="text-align: center; color: #29AAE3">
                    <hgroup class="title">
                        <h1>Your password has been reset</h1>
                    </hgroup>
                    <div>
                        <p>
                            @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                        </p>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
