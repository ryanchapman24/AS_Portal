@model AS_TestProject.Entities.CFRPatientRecruitment

@{
    ViewBag.Title = "Edit";
}

<div class="col-lg-12 mt">
    <div class="row content-panel" style="padding-left: 20px; padding-right: 20px">
        <h2>Edit Patient Recruitment CFR for <span style="color: #29AAE3">@ViewBag.EmployeeName</span></h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CFRPatientRecruitmentID)
                @Html.HiddenFor(model => model.EmployeeID)
                @Html.HiddenFor(model => model.DateOfFeedback)

                <div class="col-md-6 control-label">
                    Domain
                </div>
                <div class="col-md-6" style="margin-top: -5px">
                    @Html.DropDownList("DomainMasterID", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    #Calls
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    <input class="form-control onlyNum" name="C_Calls" type="text" maxlength="2" value="@Model.C_Calls" required />
                </div><br /><br /><br />

                <h5 style="color: #29AAE3"><strong>Telephone Etiquette</strong></h5><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pTE1
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pTEQ1", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pTE2
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pTEQ2", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pTE3
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pTEQ3", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <h5 style="color: #29AAE3"><strong>Professionalism</strong></h5><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pP1
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pPQ1", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pP2
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pPQ2", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <h5 style="color: #29AAE3"><strong>Compliance</strong></h5><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pC1
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pCQ1", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pC2
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pCQ2", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pC3
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pCQ3", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pC4
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pCQ4", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pC5
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pCQ5", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <h5 style="color: #29AAE3"><strong>Adherence</strong></h5><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pA1
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pAQ1", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pA2
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pAQ2", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pA3
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pAQ3", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pA4
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pAQ4", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pA5
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pAQ5", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <h5 style="color: #29AAE3"><strong>Accuracy of Information</strong></h5><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pAOI1
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pAOIQ1", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.pAOI2
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("pAOIQ2", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <h5 style="color: #29AAE3"><strong>Additional Feedback</strong></h5><br />

                <div class="col-md-3 control-label">
                    Comments
                </div>
                <div class="col-md-9" style="margin-top: -5px">
                    <textarea rows="3" class="form-control capitalize" name="Comments" placeholder="" required>@Model.Comments</textarea>
                </div><br /><br /><br /><br /><br />

                <div class="col-md-3 control-label">
                    Strengths
                </div>
                <div class="col-md-9" style="margin-top: -5px">
                    <textarea rows="3" class="form-control capitalize" name="Strengths" required>@Model.Strengths</textarea>
                </div><br /><br /><br /><br /><br />

                <div class="col-md-3 control-label">
                    Action Plan
                </div>
                <div class="col-md-9" style="margin-top: -5px">
                    <textarea rows="5" class="form-control capitalize" name="ActionPlan" required>@Model.ActionPlan</textarea>
                </div><br /><br /><br /><br /><br /><br /><br />

                <div class="form-group">
                    <div class="col-md-offset-11 col-md-1">
                        <input type="submit" value="Save" class="btn btn-theme pull-right" />
                    </div>
                </div>
            </div>
        }

        <div style="padding-bottom: 5px">
            @Html.ActionLink("Back to Employee Details", "Details", new { id = Model.EmployeeID })
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#direct').addClass("active");
        });
    </script>
}
