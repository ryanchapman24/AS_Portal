@model AS_TestProject.Entities.Employee


<div class="col-lg-12 mt">
    <div class="row content-panel" style="padding-left: 20px; padding-right: 20px">
        <h2>Employee Details: <span style="color: #29AAE3">@Model.FirstName @Model.LastName</span></h2>
        <div class="panel-heading">
            <ul class="nav nav-tabs nav-justified">
                <li class="active">
                    <a data-toggle="tab" href="#information">Information</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#certifications" class="contact-map">Certifications</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#awards" class="contact-map">Awards</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#disciplinaryaction" class="contact-map">Disciplinary Action</a>
                </li>
            </ul>
        </div><!-- --/panel-heading ---->
        <div class="panel-body">
            <div class="tab-content">
                <div id="information" class="tab-pane active">
                    <div>
                        <dl class="dl-horizontal">
                            <dt style="width: 190px; margin-left: -20px">
                                Employee ID
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.EmployeeID)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                First Name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.FirstName)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Last Name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.LastName)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Address Line 1
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.AddressLine1)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Address Line 2
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.AddressLine2)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                City
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.City)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                State
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.State)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Zip Code
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ZipCode)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Email
                            </dt>

                            <dd>
                                <a href="@string.Format("{0}{1}","mailto:",Model.EmailAddress)">@Model.EmailAddress</a>
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Home Phone
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.HomePhone)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Cell Phone
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CellPhone)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Birth Date
                            </dt>

                            <dd>
                                @Model.BirthDate.ToString("M/d/yyyy")
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Hire Date
                            </dt>

                            <dd>
                                @Model.HireDate.ToString("M/d/yyyy")
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Termination Date
                            </dt>

                            <dd>
                                @Model.TerminationDate.ToString("M/d/yyyy")
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Rehire Date
                            </dt>

                            @if (Model.RehireDate.HasValue)
                            {
                            <dd>
                                @Model.RehireDate.Value.ToString("M/d/yyyy")
                            </dd>
                            }
                            else
                            {
                            <dd>

                            </dd>
                            }

                            <dt style="width: 190px; margin-left: -20px">
                                Is this Employee a Manager?
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.IsManager)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Managed by
                            </dt>

                            <dd>
                                @ViewBag.Manager
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Position
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Position.PositionName)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Site
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Site.SiteName)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                File Number
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.FileNumber)
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Add Date
                            </dt>

                            <dd>
                                @Model.AddDate.ToString("M/d/yyyy")
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Added by
                            </dt>

                            <dd>
                                @ViewBag.Creator
                            </dd>

                            <dt style="width: 190px; margin-left: -20px">
                                Is this Employee Active?
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.IsActive)
                            </dd>
                        </dl>
                    </div>
                </div>


                <div id="certifications" class="tab-pane">

                </div>


                <div id="awards" class="tab-pane">

                </div>


                <div id="disciplinaryaction" class="tab-pane">
                    <div class="widget-header">
                        <h3 style="color: #29AAE3"><i class="fa fa-warning"></i> Disciplinary Action @if (User.IsInRole("Admin") || User.IsInRole("HR")){<button class="btn btn-theme btn-md pull-right" data-toggle="modal" data-target="#DAModal" style="margin-top: -10px">+ New DA</button>}</h3>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="DAModal" tabindex="-1" role="dialog" aria-labelledby="DAModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header" style="margin-bottom: 15px">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title" id="DAModalLabel">Add New Disciplinary Action for @Model.FirstName @Model.LastName</h4>
                                </div>
                                @using (Html.BeginForm("CreateDA", "Employees", new { }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="FirstName" value="@Model.FirstName" readonly="readonly" />
                                    <input type="hidden" name="LastName" value="@Model.LastName" readonly="readonly" />
                                    <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" readonly="readonly" />
                                    <div class="modal-body">
                                        <div class="" style="">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })                                           
                                            <div class="form-group">
                                                <div class="col-md-3 control-label">
                                                    Reason
                                                </div>
                                                <div class="col-md-9" style="margin-top: -5px">
                                                    <input class="form-control capitalize" name="Reason" type="text" required />
                                                </div><br /><br /><br />

                                                <div class="col-md-3 control-label">
                                                    Explanation
                                                </div>
                                                <div class="col-md-9" style="margin-top: -5px">
                                                    <textarea rows="3" class="form-control capitalize" name="Explanation" required></textarea>
                                                </div><br /><br /><br />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer" style="margin-top: 20px">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        <button id="" type="submit" class="btn btn-theme play">Confirm</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="widget-content">
                        <div class="table-responsive">
                            <table id="datatable-basic-scrolling" class="table table-hover datatable DAtable">
                                <thead>
                                    <tr>
                                        <th style="width: 90%">Date</th>                                   
                                        <th style="width: 130%">Reason</th>
                                        <th>Explanation</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.DisciplinaryActions)
                                    {
                                        <tr>
                                            <td class="text-nowrap">@item.Date.ToString("d")</td>
                                            <td style="color: #29AAE3"><strong>@item.Reason</strong></td>
                                            @if (item.EditByEmployeeID != null)
                                            {
                                                <td>@item.Explanation <i class="fa fa-question-circle tooltips" style="color: #29AAE3; margin-left: 5px" data-original-title="@item.Employee1.FirstName @item.Employee1.LastName <br> @item.EditTimeStamp.Value.ToString("g")" data-html="true" data-toggle="tooltip" data-placement="top"></i></td>
                                            }
                                            else
                                            {
                                                <td>@item.Explanation</td>
                                            }                                                                              
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>
            </div>
        </div>
        <p style="padding-bottom: 5px">
            @Html.ActionLink("Edit Employee Information", "Edit", new { id = Model.EmployeeID }) |
            @Html.ActionLink("Back to Directory", "Directory", "Home")
        </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#direct').addClass("active");
        });
    </script>
    <script>
        $(document).ready(function () {
            $('.DAtable').DataTable({
                "iDisplayLength": 10,
                "bSort": false,
                "aLengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]]
            });
        });
    </script>
}
