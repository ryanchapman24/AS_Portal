@model AS_TestProject.Entities.Employee


<div class="col-lg-12 mt">
    <div class="row content-panel" style="padding-left: 20px; padding-right: 20px">
        <h2>Employee Details: <span style="color: #29AAE3">@Model.FirstName @Model.LastName</span></h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt style="width: 190px; margin-left: -20px">
                    Employee ID
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.EmployeeID)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    First Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FirstName)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Last Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LastName)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Address Line 1
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AddressLine1)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Address Line 2
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AddressLine2)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    City
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.City)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    State
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.State)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Zip Code
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ZipCode)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Email
                </dt>

                <dd>
                    <a href="@string.Format("{0}{1}","mailto:",Model.EmailAddress)">@Model.EmailAddress</a>
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Home Phone
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.HomePhone)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Cell Phone
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CellPhone)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Birth Date
                </dt>

                <dd>
                    @Model.BirthDate.ToString("M/d/yyyy")
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Hire Date
                </dt>

                <dd>
                    @Model.HireDate.ToString("M/d/yyyy")
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Termination Date
                </dt>

                <dd>
                    @Model.TerminationDate.ToString("M/d/yyyy")
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Rehire Date
                </dt>

                @if (Model.RehireDate.HasValue)
                {
                    <dd>
                        @Model.RehireDate.Value.ToString("M/d/yyyy")
                    </dd>
                }
                else
                {
                    <dd>
                        
                    </dd>
                }
                
                <dt style="width: 190px; margin-left: -20px">
                    Is this Employee a Manager?
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IsManager)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Managed by
                </dt>

                <dd>
                    @ViewBag.Manager
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Position
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Position.PositionName)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Site
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Site.SiteName)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    File Number
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FileNumber)
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Add Date
                </dt>

                <dd>
                    @Model.AddDate.ToString("M/d/yyyy")
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Added by
                </dt>

                <dd>
                    @ViewBag.Creator
                </dd>

                <dt style="width: 190px; margin-left: -20px">
                    Is this Employee Active?
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
            </dl>
        </div>
        <p style="padding-bottom: 5px">
            @Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeID }) |
            @Html.ActionLink("Back to Directory", "Directory", "Home")
        </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#direct').addClass("active");
        });
    </script>
}