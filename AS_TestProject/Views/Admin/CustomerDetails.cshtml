@model AS_TestProject.Entities.Customer

@{
    ViewBag.Title = "Details";
}

<div class="col-lg-12 mt">
    <div class="row content-panel" style="padding-left: 20px; padding-right: 20px">
        <h2>Customer Details: <span style="color: #29AAE3">@Model.CustomerName</span></h2>

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Customer Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CustomerName)
                </dd>

                <dt>
                    Address Line 1
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AddressLine1)
                </dd>

                <dt>
                    Address Line 2
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AddressLine2)
                </dd>

                <dt>
                    City
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.City)
                </dd>

                <dt>
                    State
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.State)
                </dd>

                <dt>
                    Zip Code
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ZipCode)
                </dd>

                <dt>
                    Implementation Date
                </dt>

                <dd>
                    @Model.ImplementationDate.ToString("M/d/yyyy")
                </dd>

                <dt>
                    Termination Date
                </dt>

                <dd>
                    @Model.TerminationDate.ToString("M/d/yyyy")
                </dd>

                <dt>
                    Add Date
                </dt>

                <dd>
                    @Model.AddDate.ToString("M/d/yyyy")
                </dd>

                <dt>
                    Added by
                </dt>

                <dd>
                    @Model.Employee.FirstName @Model.Employee.LastName
                </dd>

                <dt>
                    Is this Customer Active?
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IsActive)
                </dd>

            </dl>
        </div>
        <p style="padding-bottom: 5px">
            @Html.ActionLink("Edit", "EditCustomer", new { id = Model.CustomerID }) |
            @Html.ActionLink("Back to Index", "Index")
        </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#admin').addClass("active");
        });
    </script>
}