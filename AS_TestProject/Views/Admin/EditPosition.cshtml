@model AS_TestProject.Entities.Position

@{
    ViewBag.Title = "Edit";
}

<div class="col-lg-12 mt">
    <div class="row content-panel" style="padding-left: 20px; padding-right: 20px">
        <h2>Edit Position: <span style="color: #29AAE3">@Model.PositionName</span></h2>

        @using (Html.BeginForm())
        { 
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.PositionID)

                <div class="form-group">
                    <div class="col-md-2 control-label">
                        Position Name
                    </div>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.PositionName, new { htmlAttributes = new { @class = "form-control capitalize", required = "true" } })
                        @Html.ValidationMessageFor(model => model.PositionName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 control-label">
                        Position Description
                    </div>
                    <div class="col-md-4">
                        <textarea class="form-control capitalize" name="PositionDescription" rows="3" required>@Model.PositionDescription</textarea>
                        @Html.ValidationMessageFor(model => model.PositionDescription, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                        <input type="submit" value="Save" class="btn btn-theme pull-right" />
                    </div>
                </div>
            </div>
        }

        <div style="padding-bottom: 5px">
            @Html.ActionLink("Back to Index", "Index")
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#admin').addClass("active");
        });
    </script>
}