@model AS_TestProject.Entities.CFRSale

@{
    ViewBag.Title = "Edit";
}

<div class="col-lg-12 mt">
    <div class="row content-panel" style="padding-left: 20px; padding-right: 20px">
        <h2>Edit Sales CFR for <span style="color: #29AAE3">@ViewBag.EmployeeName</span></h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CFRSalesID)
                @Html.HiddenFor(model => model.EmployeeID)
                @Html.HiddenFor(model => model.DateOfFeedback)

                <div class="col-md-6 control-label">
                    Domain
                </div>
                <div class="col-md-6" style="margin-top: -5px">
                    @Html.DropDownList("DomainMasterID", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    #Calls
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    <input class="form-control onlyNum" name="C_Calls" type="text" maxlength="2" value="@Model.C_Calls" required />
                </div><br /><br /><br />

                <h5 style="color: #29AAE3"><strong>Telephone Etiquette</strong></h5><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sTE1
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sTEQ1", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sTE2
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sTEQ2", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sTE3
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sTEQ3", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sTE4
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sTEQ4", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <h5 style="color: #29AAE3"><strong>Professionalism</strong></h5><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sP1
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sPQ1", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sP2
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sPQ2", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sP3
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sPQ3", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sP4
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sPQ4", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <h5 style="color: #29AAE3"><strong>Compliance</strong></h5><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sC1
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sCQ1", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sC2
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sCQ2", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <h5 style="color: #29AAE3"><strong>Adherence</strong></h5><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sA1
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sAQ1", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sA2
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sAQ2", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <h5 style="color: #29AAE3"><strong>Accuracy of Information</strong></h5><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sAOI1
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sAOIQ1", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <div class="col-md-9 control-label">
                    @ViewBag.sAOI2
                </div>
                <div class="col-md-3" style="margin-top: -5px">
                    @Html.DropDownList("sAOIQ2", null, htmlAttributes: new { @class = "form-control", required = "true" })
                </div><br /><br /><br />

                <h5 style="color: #29AAE3"><strong>Additional Feedback</strong></h5><br />

                <div class="col-md-3 control-label">
                    Comments
                </div>
                <div class="col-md-9" style="margin-top: -5px">
                    <textarea rows="3" class="form-control capitalize" name="Comments" placeholder="" required>@Model.Comments</textarea>
                </div><br /><br /><br /><br /><br />

                <div class="col-md-3 control-label">
                    Strengths
                </div>
                <div class="col-md-9" style="margin-top: -5px">
                    <textarea rows="3" class="form-control capitalize" name="Strengths" required>@Model.Strengths</textarea>
                </div><br /><br /><br /><br /><br />

                <div class="col-md-3 control-label">
                    Action Plan
                </div>
                <div class="col-md-9" style="margin-top: -5px">
                    <textarea rows="5" class="form-control capitalize" name="ActionPlan" required>@Model.ActionPlan</textarea>
                </div><br /><br /><br /><br /><br /><br /><br />

                <div class="form-group">
                    <div class="col-md-offset-11 col-md-1">
                        <input type="submit" value="Save" class="btn btn-theme pull-right" />
                    </div>
                </div>
            </div>
        }

        <div style="padding-bottom: 5px">
            @Html.ActionLink("Back to Employee Details", "Details", new { id = Model.EmployeeID})
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#direct').addClass("active");
        });
    </script>
}
