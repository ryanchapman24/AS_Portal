@model AS_TestProject.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}

<div id="login-page">
    <div class="container">
        <div class="form-login">
            <h2 class="form-login-heading">register now</h2>
            <div class="login-wrap">
                <section id="loginForm">
                    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control capitalize", placeholder = "first name" })<br />
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control capitalize", placeholder = "last name"})<br />
                        @Html.TextBoxFor(m => m.EmployeeID, new { @class = "form-control onlyNum", placeholder = "employee id", min = "0", maxlength = "7", minlength = "7" })<br />
                        @Html.DropDownList("PositionID", null, htmlAttributes: new { @class = "form-control", placeholder = "position" })<br />
                        @Html.DropDownList("SiteID", null, htmlAttributes: new { @class = "form-control", placeholder = "site" })<br />
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "email" })<br />
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control onlyNum phone", placeholder = "phone number", maxlength = "14", minlength = "14" })<br />
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "password" })<br />
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "confirm password" })<br /><br />
                        <input type="submit" value="REGISTER" class="btn btn-theme btn-block" />
                    }
                </section>
                <hr>
                @*<div class="login-social-link centered">
                    <p>or you can sign in via your social network</p>
                    <button class="btn btn-facebook" type="submit"><i class="fa fa-facebook"></i> Facebook</button>
                    <button class="btn btn-twitter" type="submit"><i class="fa fa-twitter"></i> Twitter</button>
                </div>*@
                <div class="registration">
                    <a class="" href="@Url.Action("Login","Account")">
                        Back to login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

