@model AS_TestProject.Models.Event

<div class="col-lg-12 mt">
    <div class="row content-panel" style="padding-left: 20px; padding-right: 20px">
        <h2>Are you sure you want to delete this event from the calendar?</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Title
                </dt>

                <dd>
                    @Model.Title
                </dd>

                <dt>
                    Author
                </dt>

                <dd>
                    @Model.Author.DisplayName
                </dd>

                <dt>
                    Start Date
                </dt>

                <dd>
                    @Model.StartDate
                </dd>

                <dt>
                    End Date
                </dt>

                <dd>
                    @Model.EndDate
                </dd>

                <dt>
                    Universal
                </dt>

                @if (Model.Universal == true)
                {
                    <dd>
                        Yes
                    </dd>
                }
                else
                {
                    <dd>
                        No
                    </dd>
                }

                <br />
                <dd>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        <input type="submit" value="Delete" class="btn btn-theme" />
                    }
                </dd>
            </dl>

            <div class="form-actions no-color" style="padding-bottom: 5px">
                @Html.ActionLink("Edit", "EditEvent", new { id = Model.Id }) |
                @Html.ActionLink("Back to Calendar", "Calendar", "Home")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#calend').addClass("active");
        });
    </script>
}
