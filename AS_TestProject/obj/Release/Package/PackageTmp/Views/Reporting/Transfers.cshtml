<div class="col-lg-12 mt">
    <div class="row content-panel" style="padding-left: 20px; padding-right: 20px; padding-bottom: 20px">
        <h3 style="color: #29AAE3"><i class="fa fa-volume-control-phone" style="margin-right: 4px"></i> Transfers</h3>
        <div class="panel-heading">
            <ul class="nav nav-tabs nav-justified">
                <li class="active">
                    <a data-toggle="tab" href="#daily">Daily Leaderboard</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#monthly" class="contact-map">Monthly Leaderboard</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#yearly" class="contact-map">Yearly Leaderboard</a>
                </li>
            </ul>
        </div><!-- --/panel-heading ---->
        <div class="panel-body">
            <div class="tab-content">
                <div id="daily" class="tab-pane active">
                    <div class="row">
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>DOMAIN</strong></h4>
                        </div>
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>WICHITA</strong></h4>
                        </div>
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>GREENSBORO</strong></h4>
                        </div>
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>TOTAL</strong></h4>
                        </div>
                    </div>
                    <hr style="margin-top: 10px; margin-bottom: 10px"/>
                    @foreach (var domain in ViewBag.DomainsToday)
                    {
                        <div class="row">
                            <div class="col-md-3">
                                <strong style="font-size: 14px; color: #29AAE3">@domain.FileMaskPlusName</strong>
                            </div>
                            <div class="col-md-3">
                                <span>@domain.WichTransfersToday</span>
                            </div>
                            <div class="col-md-3">
                                <span>@domain.GreensTransfersToday</span>
                            </div>
                            <div class="col-md-3">
                                <strong style="font-size: 16px; color: #29AAE3">@domain.TotalTransfersToday</strong>
                            </div>
                        </div>
                        <hr style="margin-top: 10px; margin-bottom: 10px" />
                    }
                </div>
                <div id="monthly" class="tab-pane">
                    <div class="row">
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>DOMAIN</strong></h4>
                        </div>
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>WICHITA</strong></h4>
                        </div>
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>GREENSBORO</strong></h4>
                        </div>
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>TOTAL</strong></h4>
                        </div>
                    </div>
                    <hr style="margin-top: 10px; margin-bottom: 10px" />
                    @foreach (var domain in ViewBag.DomainsMonth)
                    {
                        <div class="row">
                            <div class="col-md-3">
                                <strong style="font-size: 14px; color: #29AAE3">@domain.FileMaskPlusName</strong>
                            </div>
                            <div class="col-md-3">
                                <span>@domain.WichTransfersMonth</span>
                            </div>
                            <div class="col-md-3">
                                <span>@domain.GreensTransfersMonth</span>
                            </div>
                            <div class="col-md-3">
                                <strong style="font-size: 16px; color: #29AAE3">@domain.TotalTransfersMonth</strong>
                            </div>
                        </div>
                        <hr style="margin-top: 10px; margin-bottom: 10px" />
                    }
                </div>
                <div id="yearly" class="tab-pane">
                    <div class="row">
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>DOMAIN</strong></h4>
                        </div>
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>WICHITA</strong></h4>
                        </div>
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>GREENSBORO</strong></h4>
                        </div>
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>TOTAL</strong></h4>
                        </div>
                    </div>
                    <hr style="margin-top: 10px; margin-bottom: 10px" />
                    @foreach (var domain in ViewBag.DomainsYear)
                    {
                        <div class="row">
                            <div class="col-md-3">
                                <strong style="font-size: 14px; color: #29AAE3">@domain.FileMaskPlusName</strong>
                            </div>
                            <div class="col-md-3">
                                <span>@domain.WichTransfersYear</span>
                            </div>
                            <div class="col-md-3">
                                <span>@domain.GreensTransfersYear</span>
                            </div>
                            <div class="col-md-3">
                                <strong style="font-size: 16px; color: #29AAE3">@domain.TotalTransfersYear</strong>
                            </div>
                        </div>
                        <hr style="margin-top: 10px; margin-bottom: 10px" />
                    }
                </div>
            </div>
        </div>
        <p style="padding-bottom: 5px; margin-top: 30px">
            @Html.ActionLink("Back to Reporting", "Index", "Reporting")
        </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#report').addClass("active");
        });
    </script>
}
