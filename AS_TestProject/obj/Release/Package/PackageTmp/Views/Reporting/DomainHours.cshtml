<div class="col-lg-12 mt">
    <div class="row content-panel" style="padding-left: 20px; padding-right: 20px; padding-bottom: 20px">
        <h3 style="color: #29AAE3"><i class="fa fa-volume-control-phone" style="margin-right: 4px"></i> Domain Hours</h3>
        <div class="panel-heading">
            <ul class="nav nav-tabs nav-justified">
                <li class="active">
                    <a data-toggle="tab" href="#thisPayPeriod">This Pay Period</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#lastPayPeriod" class="contact-map">Last Pay Period</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#twoPayPeriodsAgo" class="contact-map">Two Pay Periods Ago</a>
                </li>
            </ul>
        </div><!-- --/panel-heading ---->
        <div class="panel-body">
            <div class="tab-content">
                <div id="thisPayPeriod" class="tab-pane active">
                    <h3 style="color: #FE5607">@ViewBag.ThisPayPeriodSpan</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>DOMAIN</strong></h4>
                        </div>
                        <div class="col-md-3">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>TIME</strong></h4>
                        </div>
                        <div class="col-md-5">
                            <h4 style="color: #29AAE3; margin-left: 0px; color: #031B25"><strong>HOURS</strong></h4>
                        </div>
                    </div>
                    <hr style="margin-top: 10px; margin-bottom: 10px" />
                    @{
                        int count = 0;
                        foreach (var domain in ViewBag.DomainHoursThisPP)
                        {
                            count++;
                            if (count < 4)
                            {
                                <div class="row" style="background-color: #f2f2f2">
                                    <div class="col-md-4" style="margin-top: 20px">
                                        <strong style="font-size: 14px; color: #29AAE3">@domain.FileMaskPlusName</strong>
                                    </div>
                                    <div class="col-md-3" style="margin-top: 20px">
                                        <strong style="font-size: 16px; color: #29AAE3">@domain.TotalHours</strong>
                                    </div>
                                    <div class="col-md-3" style="margin-top: 20px">
                                        <strong style="font-size: 16px; color: #29AAE3">@Math.Round(domain.TotalHours.TotalHours, 2)</strong>
                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1">
                                        @if (count == 1)
                                        {
                                            <strong style="font-size: 16px; color: #29AAE3"><img src="~/assets/img/1stPlace.png" style="width: 60px" /></strong>
                                        }
                                        else if (count == 2)
                                        {
                                            <strong style="font-size: 16px; color: #29AAE3"><img src="~/assets/img/2ndPlace.png" style="width: 60px" /></strong>
                                        }
                                        else if (count == 3)
                                        {
                                            <strong style="font-size: 16px; color: #29AAE3"><img src="~/assets/img/3rdPlace.png" style="width: 60px" /></strong>
                                        }
                                        else
                                        {
                                        }
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-md-4">
                                        <strong style="font-size: 14px; color: #29AAE3">@domain.FileMaskPlusName</strong>
                                    </div>
                                    <div class="col-md-3">
                                        <strong style="font-size: 16px; color: #29AAE3">@domain.TotalHours</strong>
                                    </div>
                                    <div class="col-md-3">
                                        <strong style="font-size: 16px; color: #29AAE3">@Math.Round(domain.TotalHours.TotalHours, 2)</strong>
                                    </div>
                                    <div class="col-md-2">
                                    </div>
                                </div>
                            }
                            <hr style="margin-top: 10px; margin-bottom: 10px" />
                        }
                    }
