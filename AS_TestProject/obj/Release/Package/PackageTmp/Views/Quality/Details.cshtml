
<div class="col-lg-12 mt">
    <div class="row content-panel" style="padding-left: 20px; padding-right: 20px">
        <h3 style="color: #29AAE3"><i class="fa fa-check-square-o"></i> Quality: <span style="color: #29AAE3">@ViewBag.Domain</span></h3>
        <div class="panel-heading">
            <ul class="nav nav-tabs nav-justified">
                <li class="active">
                    <a data-toggle="tab" href="#cfr">CFR Data</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#other" class="contact-map">Other</a>
                </li>
            </ul>
        </div><!-- --/panel-heading ---->
        <div class="panel-body">
            <div class="tab-content">
                <div id="cfr" class="tab-pane active">
                    @using (Html.BeginForm("Details", "Quality", new { id = ViewBag.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="row">
                            <div class="col-md-5"></div>
                            <div class="col-md-2" style="margin-top: 1px">
                                <strong style="color: #29AAE3">Site</strong>
                                @if (ViewBag.Phrase == 1 || ViewBag.Phrase == 2)
                                {
                                    @Html.DropDownList("SiteID", null, htmlAttributes: new { @class = "form-control"})
                                }
                                else
                                {
                                    @Html.DropDownList("SiteID", null, "", htmlAttributes: new { @class = "form-control"})
                                }                                   
                            </div>
                            <div class="col-md-2">
                                <strong style="color: #29AAE3">Start</strong>
                                <div class="input-group">
                                    <input id="CFRstart" name="start" class="form-control datepickerQ" size="16" type="text" value="@ViewBag.StartDate">
                                    <span class="input-group-btn">
                                        <button class="btn btn-theme" type="button" style=""><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <strong style="color: #29AAE3">End</strong>
                                <div class="input-group">
                                    <input id="CFRend" name="end" class="form-control datepickerQ" size="16" type="text" value="@ViewBag.EndDate">
                                    <span class="input-group-btn">
                                        <button class="btn btn-theme" type="button" style=""><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-theme play" style="width: 72px; margin-top: 19px; border-bottom-right-radius: 0px; border-bottom-left-radius: 0px">Submit</button>
                            </div>
                        </div>
                    }
                    @using (Html.BeginForm("Details", "Quality", new { id = ViewBag.Id}, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {  
                        <div class="row" style="margin-bottom: 60px">
                            <div class="col-md-11"></div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-default btn-xs" style="width: 72px; border-top-right-radius: 0px; border-top-left-radius: 0px">Clear</button>
                            </div>
                        </div>
                    }
                    <h3 style="color: #29AAE3; margin-left: 0px; margin-bottom: 60px; text-align: center"><i class="fa fa-volume-control-phone" style="margin-right: 8px"></i><strong style="color: #FE5607">@ViewBag.TotalCalls</strong> Calls Monitored @if (ViewBag.Phrase == 1){ <span>between <span style="color: #031B25">@ViewBag.StartDate</span> and <span style="color: #031B25">@ViewBag.EndDate</span> for <span style="color: #031B25">@ViewBag.Site</span></span> } @if (ViewBag.Phrase == 2){ <span> for <span style="color: #031B25">@ViewBag.Site</span></span> } @if (ViewBag.Phrase == 3){ <span>between <span style="color: #031B25">@ViewBag.StartDate</span> and <span style="color: #031B25">@ViewBag.EndDate</span></span> }</h3>
